<div class="gray">
    <div class="space pad-top-50"></div>
    <div class="container">
        <div class="row pad-top-25 pad-bot-25">
            <div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3 bubble">
                <h2 class="bubble-title">Administrator log in</h2>
                <div class="line"></div>

                <div class="content">
                    <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <div class="field">
                        <%= f.email_field :email, autofocus: true, required: true %>
                    </div>

                    <div class="field">
                        <%= f.password_field :password, autocomplete: "off", required: true %>
                    </div>

                    <% if devise_mapping.rememberable? -%>
                        <div class="field">
                            <%= f.check_box :remember_me %>
                        </div>
                    <% end -%>

                    <%= button_tag(type: 'submit', class: "btn btn-secondary marg-top-25") do %>
                        Log in
                    <% end %>
                    <% end %>

                    <div class="space"></div>
                    <%= render "devise/shared/links" %>
                </div>
            </div>
        </div>
    </div>
    <div class="space"></div>
</div>
