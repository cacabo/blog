<head>
    <title>Cameron Cabo | New Password</title>
</head>

<div class="gray full-height">
    <div class="space pad-top-50"></div>
    <div class="container">
        <div class="row pad-top-25 pad-bot-25">
            <div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3 bubble">
                <h2 class="bubble-title">Forgot your password?</h2>
                <div class="line"></div>
                <div class="content">

                    <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                    <%= devise_error_messages! %>

                    <div class="field">
                        <%= f.email_field :email, autofocus: true %>
                    </div>

                    <div class="actions">
                        <%= f.submit "Send me reset password instructions" %>
                    </div>
                    <% end %>

                    <%= render "devise/shared/links" %>
                </div>
            </div>
        </div>
    </div>
    <div class="space"></div>
</div>
