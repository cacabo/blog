<h3>
    <%= @article.title %>
</h3>

<p>
    <%= @article.text %>
</p>

<% if admin_signed_in? and current_admin.id == @article.admin.id %>
    <%= link_to 'Edit', edit_article_path(@article) %>
    <%= link_to 'Delete', article_path(@article),
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %>
<% end %>
<%= link_to 'Back', articles_path %>
