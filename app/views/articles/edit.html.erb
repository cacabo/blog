<head>
    <title>Cameron Cabo | Edit Post</title>
    <meta name="description" content="Edit a previously written blogpost.">
</head>

<div class="gray">
    <div class="space pad-top-50"></div>
    <div class="container">
        <div class="row pad-top-25 pad-bot-25">
            <div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3 bubble">
                <h2 class="bubble-title">Edit article</h2>
                <div class="line"></div>

                <div class="content">

                    <%= render 'form' %>
                    <div class="space"></div>
                    <%= link_to @article do %>
                    <button class="btn btn-outline-primary btn-sm">
                        <i class="fa fa-chevron-left" aria-hidden="true"></i>
                        &nbsp;Back to article</button>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
    <div class="space"></div>
</div>
