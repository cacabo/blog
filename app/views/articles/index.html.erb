<div class="container">
    <div class="row">
        <div class="col-xs-12 col-md-10 offset-md-1 col-lg-6 offset-lg-3">
            <h1>Listing articles</h1>

            <% @articles.each do |article| %>
            <tr>
                <% if not article.image.nil? and not article.image_file_name.nil? %>
                    <%= image_tag article.image.url(:medium), class: 'img-fluid' %>
                <% end %>
                <h3><%= link_to article.title, article_path(article) %></h3>
                <p><%= article.text[0...100] + '...' %></p>
            </tr>
            <% end %>

            <%= link_to 'New article', new_article_path %>
        </div>
    </div>
</div>
